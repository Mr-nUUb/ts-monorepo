{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "composite": true,
    "declarationMap": true,
    "baseUrl": "packages",
    "paths": {
      "@mr-nuub/template-lib": ["template-lib/src"],
      "@mr-nuub/template-lib/*": ["template-lib/src/*"]
    }
  }
}
